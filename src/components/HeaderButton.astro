---
interface Props {
	href: string;
}
const { href } = Astro.props
---
<a href={href} class="flex items-center cursor-pointer gap-2 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed bg-button text-white shadow-button hover:shadow-button-hover hover:scale-105 px-6 py-5 text-lg font-bold md:text-3xl rounded-xl hover:bg-slate-700"> 
    <slot name="before" />
        <slot />
    <slot name="after" />
</a>